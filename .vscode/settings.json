{
  //? Python Testing related Config
  "python.testing.unittestArgs": ["-v", "-s", ".", "-p", "test*.py"],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,

  //? Auto fetch Upstream
  "git.autofetch": true,

  //? Default Python Formatter
  "python.formatting.provider": "yapf",
  //? Default Python Language Server
  "python.languageServer": "Pylance",

  //? Config for Better Comments
  "better-comments.tags": [
    {
      //! Important/Highlighted
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      //? Info
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      //// Depreciated
      "tag": "//",
      "color": "#e8e6e6",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "#de1d1d",
      "bold": false,
      "italic": false
    },
    {
      // Todo
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      //* Underline
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      // @param
      "tag": "@param",
      "color": "#1B98F5",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    }
  ]
}
